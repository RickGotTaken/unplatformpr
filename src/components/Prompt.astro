---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"span"> {
	prompt?: string;
	reverse?: boolean;
}
const { prompt, reverse, class: className } = Astro.props;
---

<span class={["text-inherit", reverse ? "ml-2" : "mr-2", className].join(" ")}>
	{reverse ? `:${prompt ?? "<"} ` : `${prompt ?? ">"}: `}
</span>
