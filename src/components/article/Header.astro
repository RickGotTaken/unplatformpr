---
import { HTMLAttributes } from 'astro/types';
interface Props extends HTMLAttributes<"h1"> {
	size: 1 | 2 | 3 | 4 | 5 | 6;
	class?: string
}

const { size, class: className, ...props } = Astro.props;
---
{size == 1 && <h1 {...props} class={className + " " + "text-4xl mb-8 font-bold"}><slot/></h1>}
{size == 2 && <h2 {...props} class={className + " " + "text-2xl font-bold mb-6"}><slot/></h2>}
{size == 3 && <h3 {...props} class={className + " " + "text-lg font-bold mb-4"}><slot/></h3>}
{size == 4 && <h4 {...props} class={className + " " + "text-md font-light mb-4"}><slot/></h4>}
{size == 5 && <h5 {...props} class={className + " " + "text-sm mb-4"}><slot/></h5>}
{size == 6 && <h6 {...props} class={className + " " + "text-xs mb-4"}><slot/></h6>}
